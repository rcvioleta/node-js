<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <br><br><br>
    <main>
         <% if (products.length > 0) { %>
            <ul>
                <% products.forEach(p => { %>  
                    <li>
                        <strong><%= p.title %></strong> - (<%= p.cartItem.qty %>)
                        <form action="/cart-delete-item" method="POST">
                            <input type="hidden" name="productId" value="<%= p.id %>">
                            <button class="btn btn__primary" type="submit">Delete</button>
                        </form>
                    </li>
                <% }) %>
            </ul>
            <form action="/create-order" method="POST">
                <button class="btn btn__primary" type="submit">Order Now!</button>
            </form>
         <% } else { %>
            <h1>No Items added to your Cart!</h1>
         <% } %>
    </main>
<%- include('../includes/end.ejs') %>